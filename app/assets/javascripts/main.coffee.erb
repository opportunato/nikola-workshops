$ ->
  $window = $(window)
  $body = $("body")
  $kazarma = $(".kazarma")
  $header = $("header")
  $menuButton = $(".menuButton")
  $workshopList = $(".workshopList")
  $overlay = $(".overlay")
  $intro = $(".intro")
  TILDE_CODE = 192

  if (window.location.pathname == "/")
    title = document.title

  $(document).on 'keydown', (e) ->
    if e.keyCode == TILDE_CODE
      e.preventDefault()

      if workshopIds = window.location.pathname.match(/workshops\/(\d+)/)
        document.location = "/admin/workshops/#{workshopIds[1]}/edit"
      else
        document.location = '<%= admin_path %>'

  initWorkshop = ->
    $carousel = $(".carousel")

    if $carousel.length > 0
      carousel = new Carousel(".carousel")
      carousel.init()

      arrowRight = $('.arrowRight')
      arrowLeft = $('.arrowLeft')

      panes = $('.carousel li.pane')
      pane_count = panes.length

      current_pane = 0;

      nexthammertime = Hammer(arrowRight[0]).on "tap", (event) ->
          nextCarousel = new Carousel(".carousel")
          nextCarousel.init()
          nextCarousel.showPane(current_pane + 1, true)
          if current_pane < pane_count-1
              current_pane += 1

      previoushammertime = Hammer(arrowLeft[0]).on "tap", (event) ->
          previousCarousel = new Carousel(".carousel")
          previousCarousel.init()
          previousCarousel.showPane(current_pane - 1, true)
          if current_pane > 0
              current_pane -= 1

      adaptCarousel()

      addFacebookButton()
      addVKButton()

      $(".carousel-image").responsive_images 
        mobile_size: 640,
        tablet_size: 1024,
        desktop_size: 1600

  closeWorkshop = ->
    $overlay.html("")
    $overlay.removeClass 'opened'
    $body.removeClass 'noscroll'

  openWorkshop = (id, title) ->
    $overlay.addClass 'opened'
    $body.addClass 'noscroll'
    document.title = title

    $.get "/workshops/#{id}.js",
      (data) ->
        $overlay.html(data)
        initWorkshop()

        addFacebookButton()
        addVKButton()
      , 'html'

  addFacebookButton = ->
    try FB.XFBML.parse()
    catch e

  addVKButton = ->
    VK.Widgets.Like("vk-like", {type: "mini"});

  adaptCarousel = ->
    vpw = $window.width()
    vph = $window.height()
    $carousel = $(".carousel")

    $kazarma.height vph

    if vpw > 1024
      $carousel.height vph
    else if vpw < 1024
      $carousel.height 540
    else
      $carousel.height 360

  adaptCarousel()

  initWorkshop()

  # typed.js
  setTimeout ->
    $("#typed").typed
      strings: ["Воркшопы с международными специалистами в уникальной среде Никола-Ленивца."]
      typeSpeed: 10
  , 3200

  $window.resize ->
    adaptCarousel()

  # TODO с timeout какой-то грязный хак, не нравится мне это

  $menuButton.on 'click', ->
    $body.toggleClass 'noscroll'

    setTimeout ->
      $header.toggleClass 'opened'
    , 50

  $overlay.on 'click', '.menuButtonPopup', ->
    history.pushState({}, "", "/")

    document.title = title

    closeWorkshop()

  $workshopList.on 'click', ".workshopWrapper", (e) ->
    e.preventDefault()
    id = $(e.currentTarget).data('id')
    link = $(e.currentTarget).prop('href')
    title = $(e.currentTarget).find('.title').text()

    openWorkshop(id, title)

    history.pushState({workshopId: id, title: title}, "", link)

  $window.on "popstate", (e) ->
    state = e.originalEvent.state || {}

    if (state.workshopId)
      openWorkshop(state.workshopId, state.title)
    else if (window.location.pathname == "/")
      closeWorkshop()

    document.title = state.title || title
